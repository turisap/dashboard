{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "lib": ["es2015", "es2017", "dom"],
    "removeComments": true,
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "typeRoots": ["./types", "node_modules/@types"],
    "strict": true
  },

  "include": ["src/**/*"],
  "exclude": ["./types", "node_modules"]
}
